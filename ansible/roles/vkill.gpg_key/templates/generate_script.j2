%echo Generating a basic OpenPGP key
Key-Type: {{ gpg_key_gen_type }}
Key-Length: {{ gpg_key_gen_length }}
Subkey-Type: {{ gpg_key_gen_type }}
Subkey-Length: {{ gpg_key_gen_length }}
Name-Real: {{ gpg_key_gen_user_name }}
Name-Email: {{ gpg_key_gen_user_email }}
Expire-Date: {{ gpg_key_gen_expire_date }}
Passphrase: {{ gpg_key_gen_passphrase }}
%pubring {{ gpg_key_gen_path }}/{{ gpg_key_gen_files.public }}
%secring {{ gpg_key_gen_path }}/{{ gpg_key_gen_files.private }}
%commit
%echo done
