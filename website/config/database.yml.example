default: &default
  adapter: mysql2
  encoding: utf8mb4
  charset: utf8mb4
  collation: utf8mb4_unicode_ci
  pool: 5
  username: root
  password:

development:
  <<: *default
  database: ssh_bastion_development

test:
  <<: *default
  database: ssh_bastion_test<%= ENV['TEST_ENV_NUMBER'] %>

production:
  <<: *default
  database: ssh_bastion_production

staging:
  <<: *default
  database: ssh_bastion_staging
